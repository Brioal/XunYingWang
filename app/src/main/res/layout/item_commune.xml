<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp">

        <ImageView
            android:layout_margin="3dp"
            android:id="@+id/item_commune_iv_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_temp_pic" />

        <TextView
            android:maxLines="2"
            android:id="@+id/item_commune_tv_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_commune_iv_img"
            android:text="标题"
            android:paddingTop="8dp"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView

            android:id="@+id/item_commune_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_commune_tv_tittle"
            android:layout_toRightOf="@id/item_commune_iv_img"
            android:padding="6dp"
            android:text="类型"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_commune_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_commune_tv_tittle"
            android:layout_toRightOf="@id/item_commune_tv_type"
            android:padding="6dp"
            android:text="时间"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_commune_tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_commune_tv_tittle"
            android:layout_toRightOf="@id/item_commune_tv_time"
            android:padding="6dp"
            android:text="作者"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>